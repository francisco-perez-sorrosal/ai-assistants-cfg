{
  "mcpServers": {
    "task-chronograph": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "{{MCP_ROOT}}/task-chronograph-mcp",
        "python",
        "-m",
        "task_chronograph_mcp"
      ]
    },
    "memory": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "{{MCP_ROOT}}/memory-mcp",
        "python",
        "-m",
        "memory_mcp"
      ],
      "env": {
        "MEMORY_FILE": "{{MEMORY_FILE}}"
      }
    },
    "sub-agents": {
      "command": "npx",
      "args": ["-y", "sub-agents-mcp"],
      "env": {
        "AGENTS_DIR": "{{AGENTS_DIR_ABS}}",
        "AGENT_TYPE": "cursor"
      }
    }
  }
}
