  "keywords": [
    "skills",
    "commands",
    "agents",
    "python",
    "mcp",
    "refactoring",
    "planning"
  ],
  "mcpServers": {
    "task-chronograph": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "${CLAUDE_PLUGIN_ROOT}/task-chronograph-mcp",
        "python",
        "-m",
        "task_chronograph_mcp"
      ]
    },
    "memory": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "${CLAUDE_PLUGIN_ROOT}/memory-mcp",
        "python",
        "-m",
        "memory_mcp"
      ],
      "env": {
        "MEMORY_FILE": ".ai-state/memory.json"
      }
    }
  },
  "skills": ["./skills/"],
  "commands": ["./commands/"],
  "agents": [
    "./agents/researcher.md",
    "./agents/systems-architect.md",
    "./agents/implementation-planner.md",
    "./agents/context-engineer.md",
    "./agents/doc-engineer.md",
    "./agents/promethean.md",
    "./agents/verifier.md",
    "./agents/implementer.md",
    "./agents/sentinel.md",
    "./agents/skill-genesis.md"
  ]
}
